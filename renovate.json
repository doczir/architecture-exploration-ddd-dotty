{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignoreTests": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
    },
    {
      "matchPackagePatterns": ["cats"],
      "allowedVersions": "/\\d+\\.\\d+.\\d+/" 
    }
  ]
}
